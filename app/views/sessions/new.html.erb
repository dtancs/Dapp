<div class="container">
  <div class="row">
    <div class="col s12 m12">
      <div class="card">
        <div class="card-content">
        <h3>Sign in</h3>
        <%= form_for(:session, url: login_path) do |f| %>

          <div class="field">
            <%= f.label :email %>
            <%= f.text_field :email %>
          </div>

          <div class="password">
            <%= f.label :password %>
            <%= f.password_field :password %>
          </div>

          <div class="field">
            <%= f.check_box :remember_me, id:"remember_me" %>
            <%= f.label "remember_me", for:"remember_me", id:"remember_me" %>
          </div>

          <br>

          <%= f.submit "Log in", class: "waves-effect waves-light btn" %>
        <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
